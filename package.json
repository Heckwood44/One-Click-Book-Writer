{
  "name": "one-click-book-writer",
  "version": "1.0.0",
  "description": "KI-basiertes Tool zur automatisierten Kapitelgenerierung aus strukturierten Promptdaten",
  "main": "main.py",
  "scripts": {
    "dev": "uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "start": "python main.py",
    "gui": "python gui/main_window.py",
    "streamlit": "streamlit run streamlit_app.py",
    "test": "pytest",
    "format": "black .",
    "lint": "flake8 .",
    "build": "python -m build",
    "install": "pip install -r requirements.txt"
  },
  "keywords": [
    "ai",
    "writing",
    "claude",
    "chatgpt",
    "book-generation",
    "prompt-engineering"
  ],
  "author": "Tony Hegewald",
  "license": "MIT"
} 